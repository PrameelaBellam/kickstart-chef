# pull core image.
FROM centos:7

# install epel repo.
RUN yum install -y epel-release
RUN yum update -y

# install system packages.
RUN yum install -y wget vim net-tools initscripts gcc make tar
RUN yum install -y python-devel python-setuptools
RUN easy_install supervisor
RUN easy_install pip

# create supervisor config directory.
RUN mkdir /etc/supervisord.d

# install openssh server and passwd.
RUN yum install -y openssh-server passwd

# configure openssh server.
RUN mkdir /var/run/sshd
RUN ssh-keygen -t rsa -f /etc/ssh/ssh_host_rsa_key -N ''
RUN sed -i 's/PasswordAuthentication yes/PasswordAuthentication no/' /etc/ssh/sshd_config

# configure openssh user.
RUN mkdir /root/.ssh
RUN touch /root/.ssh/authorized_keys
RUN touch /root/.ssh/config
RUN echo -e "Host *\n\tStrictHostKeyChecking no\n\tUserKnownHostsFile=/dev/null" >> /root/.ssh/config
RUN chmod 400 /root/.ssh/config
ADD secrets/chef-node.pub /root/.ssh/authorized_keys

# install chef-client.
RUN mkdir /var/log/chef
RUN wget https://packages.chef.io/files/stable/chef/13.8.5/el/7/chef-13.8.5-1.el7.x86_64.rpm --quiet
RUN rpm -Uvh chef-13.8.5-1.el7.x86_64.rpm
RUN rm -rf chef-13.8.5-1.el7.x86_64.rpm

# install chef push-jobs client.
RUN wget https://packages.chef.io/files/stable/push-jobs-client/2.4.8/el/7/push-jobs-client-2.4.8-1.el7.x86_64.rpm --quiet
RUN rpm -Uvh push-jobs-client-2.4.8-1.el7.x86_64.rpm
RUN rm -rf push-jobs-client-2.4.8-1.el7.x86_64.rpm

# cleanup history.
RUN history -c